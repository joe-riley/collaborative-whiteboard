<div class="container">
  <h2 style="color: var(--color-dark-blue)">Your Profile</h2>
  <div class="section">
    <h3>Create a New Board</h3>
    <div class="row">
      <div class="row">
        <div class="input-field col s6">
          <input id="board-title" type="text" data-length="40">
          <label for="board-title" class="sans-serif">Title</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <textarea id="board-description" class="materialize-textarea" data-length="750"></textarea>
          <label for="board-description" class="sans-serif">Description</label>
        </div>
      </div>
    </div>
    <button type="submit" class="btn">Create</button>
  </div>
  <div class="divider"></div>
  <div class="section">

    {{#if boards.length}}
    <h3>Your Boards</h3>
    <div class="row">
      {{#each boards as |board|}}
      {{> board-info-homepage board}}
      {{/each}}
    </div>
    {{/if}}
  </div>
</div>

<script src="/js/create-board.js"></script>
